        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment5"
        mc:Ignorable="d"
        Title="Flight" Height="300" Width="349.315"
        Closing="OnWindowClosing">
    <Grid>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="10,239,0,0" VerticalAlignment="Top" Width="75" Click="btnStart_Click"/>
        <ComboBox x:Name="cmbBoxRoute" HorizontalAlignment="Left" Margin="103,239,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cmbBoxRoute_SelectedIndexChanged"/>
        <Button x:Name="btnLand" Content="Land" HorizontalAlignment="Left" Margin="240,239,0,0" VerticalAlignment="Top" Width="75" Click="btnLand_Click"/>
        <Image x:Name="imgAirline" HorizontalAlignment="Left" Height="224" Margin="10,10,0,0" VerticalAlignment="Top" Width="321"/>

    </Grid>
</Window>
